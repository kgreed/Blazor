@using Microsoft.AspNetCore.Components

@code {
    [CascadingParameter] protected CodeSnippetTabbed Parent { get; set; }

    [Parameter] internal string Text { get; private set; }

    [Parameter] internal RenderFragment ChildContent { get; private set; }

    protected override void OnInit() {
        base.OnInit();
        if (Parent != null) {
            Register(Parent);
        }
    }

    protected void Register(CodeSnippetTabbed parent) {
        parent.AddTabPage(this);
    }
}